{{define "header"}}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Get your daily motivational quotes to keep you inspired and productive.">
  <meta property="og:title" content="Motivational Quotes" />
  <meta property="og:description" content="Get your daily motivational quotes to keep you inspired and productive." />
  <title>Motivational Quotes</title>
  <link href="/static/css/styles.css" rel="stylesheet">
  <script src="https://unpkg.com/htmx.org@1.9.2"></script>
</head>

<body class="bg-gray-100">
  <div class="container mx-auto p-8 text-center">
    <h1 class="text-4xl font-bold mb-8">Motivational Quotes {{if .Category}} - {{.Category}}{{end}}</h1>

    <!-- Category Selection Buttons -->
    <div class="flex justify-center space-x-4 mb-8">
      <button 
        hx-put="/set-category" 
        hx-vals='{"category": "gratitude"}' 
        hx-target="#category-input input"
        hx-swap="outerHTML" 
        aria-label="Select gratitude category"
        class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-colors duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
        Gratitude
      </button>

      <button 
        hx-put="/set-category" 
        hx-vals='{"category": "grit"}' 
        hx-target="#category-input input"
        hx-swap="outerHTML" 
        aria-label="Select grit category"
        class="bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition-colors duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        Grit
      </button>

      <button 
        hx-put="/set-category" 
        hx-vals='{"category": "perseverance"}' 
        hx-target="#category-input input"
        hx-swap="outerHTML" 
        aria-label="Select perseverance category"
        class="bg-red-500 text-white px-6 py-3 rounded-lg hover:bg-red-600 transition-colors duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
        Perseverance
      </button>
    </div>

    <!-- Hidden input to store the selected category -->
    <div id="category-input">
      <input type="hidden" name="category" value="{{.Category}}">
    </div>

    <!-- Button to Generate New Quote based on the selected category -->
    <button 
      hx-get="/generate-quote" 
      hx-target="#quote-container" 
      hx-swap="outerHTML"
      hx-include="#category-input input"
      aria-label="Generate a new motivational quote"
      class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 transition-colors duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
      Generate Quote
    </button>

    <!-- Quote Container -->
    <section id="quote-container" class="mb-8" aria-live="polite" aria-label="Motivational Quote">
      {{template "quote" .}}
    </section>
  </div>

</body>

</html>
{{ end }}

